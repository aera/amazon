<!DOCTYPE html>
<html>
  <head>
    <title>Amazon</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag  'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div>
      <span><%=  link_to 'Home', home_path %> | </span>
      <span><%=  link_to 'About', about_path %> | </span>
      <span><%=  link_to 'Contact', contact_path %> | </span>
      <span><%=  link_to 'New Product', new_product_path %> | </span>
      <span><%=  link_to 'All Products', products_path %> | </span>

      <% if user_signed_in? %>
          <span>Hello, <%= current_user.full_name %>! | </span>
          <span><%=  link_to 'Log Out', session_path, method: :delete, data: {confirm: 'Logout?'} %> |  </span>
      <% else %>
          <span><%= link_to 'Login', new_session_path %> | </span>
          <span><%= link_to 'Sign Up', new_user_path %>  | </span>
      <% end %>
    </div>

    <div>
      <% if flash[:notice] %>
      <div><%= flash[:notice] %></div>
      <% elsif %>
      <div><%= flash[:alert] %></div>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
