<h1>Contact Us</h1>

<% if @title.present? %>
  <p>
    Hi <%= @title %>, thanks for contacting us, we'll get back to you shortly!
  </p>
<% end %>

<%=  form_tag contact_path do  %>
  <div>
    <%= label_tag :title %>
    <%= text_field_tag :title, nil, placeholder: 'Hello Amir'%>
  </div>

  <div>
    <%= label_tag :email %>
    <%= text_field_tag :email, nil, placeholder: 'Enter your email' %>
  </div>

  <div>
    <%= label_tag :message %>
    <%= text_area_tag :message, nil, placeholder: 'Enter your message' %>
  </div>

  <%= submit_tag 'Contact Us' %>
<% end %>
